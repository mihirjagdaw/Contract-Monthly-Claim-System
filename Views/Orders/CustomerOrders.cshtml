@model List<ST10449392_CLDV6212_POE.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>You haven't placed any orders yet.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Order ID</th>
            <th>Status</th>
            <th>Date</th>
            <th>Items</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.Status</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>
                    <ul>
                        @foreach (var item in order.OrderItems)
                        {
                            <li>@item.Product.Product_Name x @item.Quantity</li>
                        }
                    </ul>
                </td>
            </tr>
        }
        </tbody>
    </table>
}