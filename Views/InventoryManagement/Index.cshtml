@model IEnumerable<ST10449392_CLDV6212_POE.Models.InventoryManagement>

@{
    ViewData["Title"] = "Inventory Management";
}

<div class="container mt-4">
    <h1 class="mb-4">Inventory Management</h1>

    <div class="mb-3">
        <a asp-action="Purchase" class="btn btn-primary">Create New Purchase</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Inventory_Id)</th>
            <th>@Html.DisplayNameFor(model => model.PartitionKey)</th>
            <th>@Html.DisplayNameFor(model => model.RowKey)</th>
            <th>@Html.DisplayNameFor(model => model.Timestamp)</th>
            <th>@Html.DisplayNameFor(model => model.Customer_Id)</th>
            <th>@Html.DisplayNameFor(model => model.Product_Id)</th>
            <th>@Html.DisplayNameFor(model => model.Purchase_Date)</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Inventory_Id)</td>
                <td>@Html.DisplayFor(modelItem => item.PartitionKey)</td>
                <td>@Html.DisplayFor(modelItem => item.RowKey)</td>
                <td>@Html.DisplayFor(modelItem => item.Timestamp)</td>
                <td>@Html.DisplayFor(modelItem => item.Customer_Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Product_Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Purchase_Date)</td>
            </tr>
        }
        </tbody>
    </table>
</div>